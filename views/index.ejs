<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>IBlog</title>
  <!-- bootstrap css -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <!-- font-awesome -->
  <script src="/js/all.js"></script>
  <script src="fonts/all.js"></script>
  <!--google fonts  -->
<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,700,800,900|Roboto:400,500,700,900" rel="stylesheet">
  <!-- main css -->
  <link rel="stylesheet" href="/css/main.css">
</head>
<!-- navbar -->
<nav class="navbar py3 navbar-dark navbar-expand-sm  navbar-menu" id='nav-text'>
  <!-- lOGO Either image/text -->
  <a href="/" class="navbar-brand text-uppercase font-weight-bold" id='brand-text' >iBlog</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarLinks">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarLinks">
  <ul class="navbar-nav">
        <li class="nav-item ">
          <a href="/" class="text nav-link" id='text-1'>Home</a>
        </li>
        <li class="nav-item">
          <a href="/addnewpost" class="nav-link" id='text-2'>Add Post</a>
        </li>
        <li class="nav-item">
          <a href="https://github.com/tweneboah/iblogapp/wiki" class="nav-link" id='text-4'>Docs</a>
        </li>
        
  </ul>
  </div>

</nav>
<!--End of navbar -->
<body>


<!-- Filler Section -->
<section id="filler" class="py-5 ">
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto text-center">
        <h1 id='title'>Pen Your Ideas!!</h1>
        <p class="lead text-white">Do you have something to share across the world? Your words can save your lover you don't know. Your words has no discrimination. Click to add your words.</p>
        <a href="/addnewpost" class="btn btn-lg btn-primary m-2">Add New Post</a>
      </div>
    </div>
  </div>
</section>
<!-- End of Filler Section -->

<!-- POST Section -->
<section id="team" class="py-5 bg-light">
 <div class="container">
   <!-- Title -->
    <div class="row">
      <div class="col text-center">
        <h1 class="display-5 text-dark mb-0">
           <strong>LATEST POSTS</strong>
        </h1>
        <div class="text-underline bg-danger text-center mb-3"></div>
        <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Cupiditate veritatis</p>
      </div>
    </div>
    <!-- End of title -->


    
    <div class="row">
    <%allPosts.forEach((post)=>{%>
        <!-- POST CONTENT -->
        <div class="md-6 col-lg-4 my-3">
        <div class="card">
        
          <img src="<%=post.image%>" class="card-img-top" alt="">
          <div class="card-body">

         
            <h5 class="card-title text-capitalize"><%=post.title%></h5>
            <p><%=post.description%> </p>
            <a href="" class="btn btn-outline-danger text-uppercase">Read more</a>
          </div> 
        </div>
      </div>
      <%})%>
      <!--End of POST CONTENT -->

    </div>
 </div>
</section>
<!--End of POST Section -->
           <div class="card-footer">
            <a href="" title="" class="btn btn-block btn-outline-danger text-capitalize">Contact the developer</a>
           </div>
         </div>
       </div>
       <!-- End of card -->
     </div>
    
  </div>
</section>

<!-- Footer Section -->
<footer id="footer" class="bg-dark py-5">
  <div class="container">
     <!-- Title -->
    <div class="row">
      <div class="col text-center">
        <h2 class="display-4 text-dark mb-0">
           <strong class="text-white">GET IN TOUCH</strong>
        </h2>
        <div class="text-underline bg-danger text-center mb-3"></div>
        <p class="text-white">You can hire me for your projects. Follow me on</p>
      </div>
    </div>
    <!-- End of Get in touch  title -->
    <div class="row text-center">
      <div class="col">
        <a href="" class="btn">
          <i class="fab fa-facebook fa-3x m-3"></i>
        </a>

         <a href="" class="btn">
          <i class="fab fa-google fa-3x m-3"></i>
        </a>

         <a href="" class="btn">
          <i class="fab fa-twitter fa-3x m-3"></i>
        </a>

         <a href="" class="btn">
          <i class="fab fa-instagram fa-3x m-3"></i>
        </a>
        
      </div>
    </div>
  </div>
  
</footer>
<!--End of Footer Section -->

  <!-- jquery -->
  <script src="./js/jquery-3.3.1.min.js"></script>
  <!-- bootstrap js -->
  <script src="./js/bootstrap.bundle.min.js"></script>
</body>

</html>